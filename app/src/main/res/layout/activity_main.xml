<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    app:alignmentMode="alignBounds"
    app:columnCount="3"
    tools:context="edu.angelo.studio05.MainActivity">

    <Button
        android:id="@+id/button00"
        style="?buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:onClick="clickLight"
        android:tag="0,0"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="0"
        app:layout_rowWeight="1"/>

    <Button
        android:id="@+id/button01"
        style="?buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:onClick="clickLight"
        android:tag="0,1"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="0"
        app:layout_rowWeight="1"/>

    <Button
        android:id="@+id/button02"
        style="?buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:onClick="clickLight"
        android:tag="0,2"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="0"
        app:layout_rowWeight="1"/>

    <Button
        android:id="@+id/button10"
        style="?buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:onClick="clickLight"
        android:tag="1,0"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="1"
        app:layout_rowWeight="1"/>

    <Button
        android:id="@+id/button11"
        style="?buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:onClick="clickLight"
        android:tag="1,1"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="1"
        app:layout_rowWeight="1"/>

    <Button
        android:id="@+id/button12"
        style="?buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:onClick="clickLight"
        android:tag="1,2"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="1"
        app:layout_rowWeight="1"/>

    <Button
        android:id="@+id/button20"
        style="?buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:onClick="clickLight"
        android:tag="2,0"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="2"
        app:layout_rowWeight="1"/>

    <Button
        android:id="@+id/button21"
        style="?buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:onClick="clickLight"
        android:tag="2,1"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="2"
        app:layout_rowWeight="1"/>

    <Button
        android:id="@+id/button22"
        style="?buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:onClick="clickLight"
        android:tag="2,2"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="2"
        app:layout_rowWeight="1"/>

    <Button
        android:id="@+id/button30"
        style="?buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:onClick="clickLight"
        android:tag="3,0"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="3"
        app:layout_rowWeight="1"/>

    <Button
        android:id="@+id/button31"
        style="?buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:onClick="clickLight"
        android:tag="3,1"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="3"
        app:layout_rowWeight="1"/>

    <Button
        android:id="@+id/button32"
        style="?buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:onClick="clickLight"
        android:tag="3,2"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="3"
        app:layout_rowWeight="1"/>

    <Button
        android:id="@+id/resetButton"
        style="?buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:onClick="startNewGame"
        android:text="@string/start_new_game"
        android:textSize="15sp"
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="4"
        app:layout_rowWeight="1"/>

</android.support.v7.widget.GridLayout>